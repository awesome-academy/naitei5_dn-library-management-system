<header class="navbar navbar-fixed-top navbar-light bg-warning">
  <div class="container">
    <ul class="nav navbar-nav">
      <li>
        <div class="navbar-header">
          <%= link_to root_path do %>
            <div id="logo">
              <span class="glyphicon glyphicon-book"></span>
              <span>LMS</span>
            </div>
          <% end %>
        </div>
      </li>
      <li class="active"><%= link_to t("global.menu.books"), books_path%></li>
      <li><%= link_to t("global.menu.about"), about_path %></li>
    </ul>
    <ul class="nav navbar-nav navbar-right">
      <% if logged_in? %>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <%= t ".account" %>
            <b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to t(".profile"), current_user %></li>
            <li><%= link_to t(".setting"), "#" %></li>
            <li class="divider"></li>
            <li>
              <%= link_to t(".log_out"), logout_path, method: :delete %>
            </li>
          </ul>
        </li>
      <% else %>
        <li>
          <%= link_to signup_path do %>
            <span class="glyphicon glyphicon-user"></span> <%= t "global.menu.signup" %>
          <% end %>
        </li>
        <li>
          <%= link_to login_path do %>
            <span class="glyphicon glyphicon-log-in"></span> <%= t "global.menu.login" %>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</header>
