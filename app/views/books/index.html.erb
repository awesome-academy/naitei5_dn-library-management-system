<h1><%= t ".title" %></h1>
<hr>

<% if @books.empty? %>
  <p class="center bg-warning"><%= t ".books_empty" %></p>
<% else %>
  <%== pagy_bootstrap_nav(@pagy) %>

  <ul class="book-container">
      <% @books.each_slice(4) do |books_slice| %>
        <li class="row book-row">
          <%= render books_slice %>
        </li>
      <% end %>
  </ul>

  <%== pagy_bootstrap_nav(@pagy) %>
<% end %>
